<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundButton." parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="exitButton" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">X</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="leftCornImg." parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <style name="rightCornImg" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/back2</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#bcbcbc</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="barsOfGame" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/white</item>
    </style>

</resources>